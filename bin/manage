#!/bin/bash
###############################################################################
# RPS Management Script
#
# Unified management interface for the Retirement Planning System.
# Features: error handling, logging, and robust command execution.
#
# Author: pan
# Updated: 2026-01-25
###############################################################################

set -euo pipefail

# Configuration
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "${SCRIPT_DIR}/.." && pwd)"
LOG_DIR="${PROJECT_ROOT}/logs"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Ensure log directory exists
mkdir -p "${LOG_DIR}"

# Logging function
log() {
    local level=$1
    shift
    local message="$*"
    local timestamp="$(date +"%Y-%m-%d %H:%M:%S")"

    # Log to file (if writable)
    if [[ -w "${LOG_DIR}" ]]; then
        echo "[${timestamp}] [${level}] ${message}" >> "${LOG_DIR}/manage.log"
    fi

    # Log to console with colors
    case $level in
        INFO) echo -e "${BLUE}[INFO]${NC} ${message}" ;;
        SUCCESS) echo -e "${GREEN}[SUCCESS]${NC} ${message}" ;;
        WARNING) echo -e "${YELLOW}[WARNING]${NC} ${message}" ;;
        ERROR) echo -e "${RED}[ERROR]${NC} ${message}" ;;
        *) echo "[${level}] ${message}" ;;
    esac
}

# Error handler
error_exit() {
    log ERROR "$1"
    exit 1
}

# Trap errors (disabled for functions that handle their own errors)
# trap 'error_exit "Command failed at line $LINENO"' ERR

show_help() {
    echo "Retirement Planning System - Management CLI"
    echo ""
    echo "Usage: $0 [command]"
    echo ""
    echo "Commands:"
    echo "  start         Start application (simple mode)"
    echo "  start-docker  Start application in Docker"
    echo "  stop          Stop application"
    echo "  restart       Restart application"
    echo "  logs          View application logs"
    echo "  tunnel        Start Cloudflare tunnel"
    echo "  backup        Run comprehensive backup"
    echo "  restore       Restore from backup"
    echo "  status        Check system status"
    echo "  clean         Remove all data (WARNING!)"
    echo "  skills        List available planning skills"
    echo "  reset-token   Generate password reset token"
    echo ""
}

start_simple() {
    log INFO "Starting application in simple mode..."
    exec "${PROJECT_ROOT}/bin/start"
}

start_docker() {
    log INFO "Building Docker image..."
    cd "${PROJECT_ROOT}"
    if ! docker build -f docker/Dockerfile -t retirement-planning .;
    then
        error_exit "Docker build failed"
    fi

    log INFO "Starting container..."
    # Check if running
    if docker ps -q -f name=retirement-planner > /dev/null;
    then
        log WARNING "Container already running. Restarting..."
        docker stop retirement-planner >/dev/null
        docker rm retirement-planner >/dev/null
    fi

    docker run -d \
        --name retirement-planner \
        -p 5137:5137 \
        -v "${PROJECT_ROOT}/data:/app/data" \
        retirement-planning

    log SUCCESS "Application started at http://127.0.0.1:5137"
}

stop_app() {
    log INFO "Stopping application..."
    local stopped=false
    
    if docker ps -q -f name=retirement-planner > /dev/null;
    then
        docker stop retirement-planner >/dev/null || true
        docker rm retirement-planner >/dev/null || true
        log SUCCESS "Docker container stopped"
        stopped=true
    fi

    if pgrep -f "src/app.py" > /dev/null;
    then
        pkill -f "src/app.py" || true
        log SUCCESS "Python process stopped"
        stopped=true
    fi

    if [[ "$stopped" == "false" ]]; then
        log INFO "No running application found"
    fi
}

view_logs() {
    if docker ps -q -f name=retirement-planner > /dev/null;
    then
        docker logs -f retirement-planner
    else
        # Follow the latest log file in logs/ dir
        local latest_log=$(ls -t "${LOG_DIR}"/*.log 2>/dev/null | head -n1)
        if [[ -n "$latest_log" ]]; then
            tail -f "$latest_log"
        else
            log WARNING "No logs found"
        fi
    fi
}

start_tunnel() {
    log INFO "Starting Cloudflare Tunnel..."
    if ! command -v cloudflared &> /dev/null;
    then
        error_exit "cloudflared not found. Please install it first."
    fi
    cloudflared tunnel --url http://127.0.0.1:5137
}

backup_data() {
    log INFO "Delegating to backup script..."
    "${PROJECT_ROOT}/bin/backup" "$@"
}

restore_data() {
    log INFO "Delegating to restore script..."
    "${PROJECT_ROOT}/bin/restore" "$@"
}

clean_all() {
    echo -e "${RED}WARNING: This will delete ALL data and containers!${NC}"
    echo -n "Type 'yes' to confirm: "
    read confirm
    
    if [[ "$confirm" == "yes" ]]; then
        stop_app
        rm -rf "${PROJECT_ROOT}/data/"*
        rm -rf "${PROJECT_ROOT}/venv"
        rm -rf "${PROJECT_ROOT}/src/venv"
        log SUCCESS "System cleaned successfully"
    else
        log INFO "Operation cancelled"
    fi
}

check_status() {
    echo "Application Status"
    echo "=================="
    
    local running=false
    if docker ps | grep -q retirement-planner;
    then
        echo -e "Docker container: ${GREEN}RUNNING${NC}"
        running=true
    elif pgrep -f "src/app.py" > /dev/null;
    then
        echo -e "Python process: ${GREEN}RUNNING${NC}"
        running=true
    else
        echo -e "Status: ${RED}STOPPED${NC}"
    fi
    
    echo ""
    if [[ "$running" == "true" ]]; then
        if curl -s http://127.0.0.1:5137/health > /dev/null;
        then
            echo -e "Health check: ${GREEN}OK${NC}"
        else
            echo -e "Health check: ${RED}FAILED${NC}"
        fi
    fi
    
    echo ""
    echo "Database:"
    if [[ -f "${PROJECT_ROOT}/data/planning.db" ]]; then
        local size=$(du -h "${PROJECT_ROOT}/data/planning.db" | cut -f1)
        echo -e "  Size: ${BLUE}${size}${NC}"
    else
        echo -e "  ${YELLOW}Not initialized${NC}"
    fi
}

view_skills() {
    echo "Available Planning Skills"
    echo "========================="
    for skill in "${PROJECT_ROOT}/skills/"*-SKILL.md;
    do
        if [[ -f "$skill" ]]; then
            basename "$skill" | sed 's/-SKILL.md//'
        fi
    done
}

# Main dispatch
case "${1:-}" in
    start)
        start_simple
        ;;
    start-docker)
        start_docker
        ;;
    stop)
        stop_app
        ;;
    restart)
        stop_app
        sleep 2
        start_simple
        ;;
    logs)
        view_logs
        ;;
    tunnel)
        start_tunnel
        ;;
    backup)
        shift
        backup_data "$@"
        ;;
    restore)
        shift
        restore_data "$@"
        ;;
    clean)
        clean_all
        ;;
    status)
        check_status
        ;;
    skills)
        view_skills
        ;;
    reset-token)
        shift
        "${PROJECT_ROOT}/venv/bin/python3" "${PROJECT_ROOT}/bin/generate-reset-token" "$@"
        ;;
    help|--help|-h)
        show_help
        ;;
    *)
        show_help
        exit 1
        ;;
esac