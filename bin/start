#!/bin/bash

echo "==================================================="
echo "  Retirement Planning System - Starting...       "
echo "==================================================="
echo ""

# Get the project root directory
PROJECT_ROOT="$(dirname "$0")/.."
cd "$PROJECT_ROOT"

# Check if Python 3 is installed
if ! command -v python3 &> /dev/null; then
    echo "ERROR: Python 3 is not installed"
    echo "Please install Python 3 and try again"
    exit 1
fi

# Create virtual environment if it doesn't exist
if [ ! -d "src/venv" ]; then
    echo "Creating virtual environment..."
    python3 -m venv src/venv
    echo "✓ Virtual environment created"
fi

# Install/upgrade dependencies using venv's pip directly
echo "Installing dependencies..."
./src/venv/bin/pip install --upgrade pip
./src/venv/bin/pip install -r src/requirements.txt

# Create data directory
mkdir -p data

echo "✓ Dependencies installed"
echo ""
echo "==================================================="
echo "  Starting Flask Server...                        "
echo "==================================================="
echo ""
echo "  Access the application at:"
echo "  http://127.0.0.1:5137"
echo ""
echo "  Press Ctrl+C to stop"
echo ""
echo "==================================================="
echo ""

# Create logs directory
mkdir -p logs

# Check if production service is running
if systemctl is-active --quiet rps 2>/dev/null; then
    echo "⚠️  WARNING: Production service 'rps' is running on port 5137"
    echo "   Stop it first with: sudo systemctl stop rps"
    echo ""
    read -p "Stop production service and continue? [y/N] " -n 1 -r
    echo
    if [[ $REPLY =~ ^[Yy]$ ]]; then
        sudo systemctl stop rps
        echo "✓ Production service stopped"
    else
        echo "Aborted."
        exit 1
    fi
fi

# Kill any existing dev server on port 5137
pkill -f "python src/app.py" 2>/dev/null || true

# Run the application in the background
# Set PYTHONPATH to include the project root so 'src' module imports work
PYTHONPATH="$PWD:$PYTHONPATH" nohup ./src/venv/bin/python src/app.py > logs/dev-server.log 2>&1 &
PID=$!

# Wait a moment and check if it started
sleep 1
if kill -0 $PID 2>/dev/null; then
    echo "✓ Server started (PID: $PID)"
    echo "  Logs: logs/dev-server.log"
    echo ""
    echo "  To stop: pkill -f 'python src/app.py'"
else
    echo "✗ Server failed to start. Check logs/dev-server.log"
    exit 1
fi
